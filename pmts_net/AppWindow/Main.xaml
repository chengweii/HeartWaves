                <Button Template="{StaticResource ResourceKey=MainLogoTrain}" Tag="../Image/MainLogo/Train.png" Margin="30,0,0,120" Click="MainLogoTrain_MouseDown" MouseEnter="MainLogoClass_MouseEnter"/>
